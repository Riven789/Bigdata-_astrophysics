import numpy as np
import torch
import h5py
import os
import matplotlib.pyplot as plt

from dataset import Spectrogram





batch_size = 5


data_dir = '../data/chunks/'
files = [h5py.File(data_dir+file, 'r') for file in os.listdir(data_dir) if file[:11] == 'background-']


param_keys = ['chirp_mass', 'mass_ratio', 'distance', 'phi', 'psi',  'dec', 'snr']


batch = np.array([files[0]['H1'][:batch_size], files[0]['L1'][:batch_size]])
params = np.array([np.array(files[0][key][:batch_size]) for key in param_keys])

spec = Spectrogram(num_points=batch.shape[-1])

print(batch.shape, params.shape)


params





whitened_data = spec.whitening(batch)
whitened_data.shape


for i in range(batch_size):

    plt.plot(whitened_data[i, 0, :])
    plt.plot(whitened_data[i, 1, :], alpha=0.5)
    plt.title(f'whitened Signal [SNR = {str(np.round(params[-1][i], 1))}]')

    plt.show()





import matplotlib.pyplot as plt
import torch
import os

spectrogram_path = '../data/spectrograms/'
file_paths = [f for f in os.listdir(spectrogram_path) if f.endswith('.pt')]
for file_path in file_paths[:5]:
    fig, ax = plt.subplots(1, 2, figsize=(20, 5))
    spectrogram = torch.load(spectrogram_path + file_path)
    spec_data = spectrogram['data']
    h1_data = spec_data[:, :, 0, :, :]
    ax[0].imshow(h1_data[0, 0, :, :], aspect='auto', cmap='viridis')
    ax[0].set_title(f'Spectrogram H1')
    ax[0].set_xlabel('Time')
    ax[0].set_ylabel('Frequency')
    ax[0].invert_yaxis()  # Flip y-axis

    l1_data = spec_data[:, :, 1, :, :]
    ax[1].imshow(l1_data[0, 0, :, :], aspect='auto', cmap='viridis')
    ax[1].set_title(f'Spectrogram L1')
    ax[1].set_xlabel('Time')
    ax[1].set_ylabel('Frequency')
    ax[1].invert_yaxis()  # Flip y-axis
    plt.show()






